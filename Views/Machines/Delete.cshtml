@model StockControl.Models.Machine

<h1>Makineyi Sil</h1>

<h3>Bu makineyi silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Makine Adı
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Parça Sayısı
        </dt>
        <dd class="col-sm-10">
            @Model.Parts.Count
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
