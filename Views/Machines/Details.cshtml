@model StockControl.Models.Machine

<div class="container mt-4">
    <h1 class="mb-4">@Model.Name - Parça Detayları</h1>

    @if (Model.Parts.Count == 0)
    {
        <p class="alert alert-warning">Bu makineye henüz parça eklenmemiş.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Parça Adı</th>
                    <th>Stok Miktarı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var part in Model.Parts)
                {
                    <tr>
                        <td>@part.Name</td>
                        <td>@part.StockQuantity</td>
                        <td>
                            <a asp-action="DeletePart" asp-route-partId="@part.Id" asp-route-machineId="@Model.Id"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Bu parçayı silmek istediğinizden emin misiniz?')">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
        <a asp-action="EditParts" asp-route-id="@Model.Id" class="btn btn-warning">Güncelle</a>
    </div>
</div>